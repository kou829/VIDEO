<div class="r-n_main1">
  <h3>新規登録をお済みでないお客様</h3>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%# render "users/shared/error_messages", model: @user %>
    <div class="field-input">
      <div class="field">
        <%= f.text_field :nickname, placeholder: "ニックネーム", class: "field_box" %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "field_box" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "field_box" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再パスワード", class: "field_box" %>
      </div>
      <div class="boxes">
        <input type="checkbox" id="box-1">
        <label for="box-1">利用規約に同意する</label>
      </div>
      <div class="actions">
        <%= f.submit "新規登録", id: "field_btn" %>
      </div>
    </div>
  <% end %>
</div>
<div class="r-n_main2">
  <div class="gest-head">ゲストでログインする方</div>
  <div class="another-sign-up">
    <%= link_to "ゲストログイン", videos_guest_sign_in_path, method: :post, class: "another-select", id: "another-select1" %>
    <%= link_to "Googleでのログイン", "#", class: "another-select", id: "another-select2"  %>
    <%= link_to "Yahoo!でのログイン", "#", class: "another-select", id: "another-select3"  %>
    <%= link_to "FaceBookでのログイン", "#", class: "another-select", id: "another-select4"  %>
  </div>
  <div class="service">
    <%= link_to "利用規約", "#", class: "terms-of-service", id: "another-select5" %>
  </div>
</div>

